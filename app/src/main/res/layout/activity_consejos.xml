<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Consejos"
    android:orientation="vertical"
    android:background="@drawable/fondoeco">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.4"
        android:orientation="vertical"
        android:padding="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/logoblanco"
                android:layout_gravity="center">
            </ImageView>

            <TextView
                android:id="@+id/title_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="EcoRecicla"
                android:textColor="@color/white"
                style="@style/TittleStyle">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical">



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@color/griscard"
                app:cardCornerRadius="20dp"
                app:cardElevation="20dp"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    style="@style/TittleCardStyle"
                    android:text="Consejos"
                    android:textColor="@color/gray"
                    android:textColorHint="#F3EFEF"
                    android:textColorLink="#F6F4F4"
                    android:textSize="34sp" />


                <TextView
                    style="@style/Text_Style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="500dp"
                    android:text="Pon en practica estos consejos utiles para tu hogasr y el lugar donde trabajas."
                    android:textAlignment="center">

                </TextView>

                <RadioButton
                    android:id="@+id/radioButtonconsejosdiarios"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:autoSizeTextType="none"
                    android:fontFamily="@font/cabin_semibold"
                    android:layout_marginTop="50dp"
                    android:text="Activar consejos diarios"
                    android:textColor="@color/gray"
                    android:textColorHint="#F4EFEF"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    />

                <RadioButton
                    android:id="@+id/radioButtonConsejossemanales"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:autoSizeTextType="none"
                    android:fontFamily="@font/cabin_semibold"
                    android:layout_marginTop="90dp"
                    android:text="Activar consejos semanales"
                    android:textColor="@color/gray"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"/>

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="330dp"
                    android:layout_height="180dp"
                    android:layout_marginTop="140dp"
                    android:layout_marginStart="12dp"
                    app:srcCompat="@drawable/reciclaje" />

                <EditText
                    android:id="@+id/editTextText2"
                    android:layout_width="310dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="340dp"
                    android:ems="10"
                    android:inputType="text"
                    android:text="indicanos tu consejo" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="420dp"
                    android:text="ingresar consejo"
                    android:textColorHighlight="#FFFFFF"
                    android:backgroundTint="@color/green"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold"/>


            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:background="@color/grismenu"
        android:orientation="horizontal"
        android:padding="5dp"
        android:gravity="center_vertical|center">

        <ImageView
            android:id="@+id/img_menu_registro"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/logoverde"
            android:layout_margin="22dp"
            >

        </ImageView>

        <ImageView
            android:id="@+id/img_menu_estadistica"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/estadisticas"
            android:layout_margin="22dp"
            >

        </ImageView>

        <ImageView
            android:id="@+id/img_menu_home"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/home"
            android:layout_margin="22dp"
            >

        </ImageView>

        <ImageView
            android:id="@+id/img_menu_tips"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/tips"
            android:layout_margin="22dp"
            >

        </ImageView>

        <ImageView
            android:id="@+id/img_menu_puntos"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/puntos"
            android:layout_margin="22dp"
            >

        </ImageView>

    </LinearLayout>

</LinearLayout>
